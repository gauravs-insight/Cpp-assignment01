#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    srand(time(0));
    int secretNumber = rand() % 100 + 1;
    int guess, attempts = 0, maxAttempts = 7;

    cout << "Guess the number (1-100). You have " << maxAttempts << " attempts.\n";

    while (attempts < maxAttempts) {
        cout << "Enter guess: ";
        cin >> guess;
        attempts++;

        if (guess > secretNumber)
            cout << "Too high! Attempts left: " << (maxAttempts - attempts) << endl;
        else if (guess < secretNumber)
            cout << "Too low! Attempts left: " << (maxAttempts - attempts) << endl;
        else {
            cout << "Correct! You guessed in " << attempts << " attempts.\n";
            return 0;
        }
    }

    cout << "Sorry, you ran out of attempts. The number was " << secretNumber << ".\n";
    return 0;
}
